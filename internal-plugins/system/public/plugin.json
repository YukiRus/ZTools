{
  "$schema": "node_modules/@ztools-center/ztools-api-types/resource/ztools.schema.json",
  "name": "system",
  "title": "系统",
  "description": "ZTools 系统内置插件",
  "author": "Zing",
  "version": "1.0.0",
  "logo": "clear.png",
  "features": [
    {
      "code": "clear",
      "explain": "停止所有插件",
      "icon": "clear.png",
      "cmds": ["Clear", "停止所有插件"]
    },
    {
      "code": "reboot",
      "explain": "重启",
      "icon": "reboot.png",
      "cmds": ["Reboot", "重启"]
    },
    {
      "code": "shutdown",
      "explain": "关机",
      "icon": "shutdown.png",
      "cmds": ["Shutdown", "关机"]
    },
    {
      "code": "sleep",
      "explain": "睡眠",
      "icon": "sleep.png",
      "cmds": ["Sleep", "睡眠"]
    },
    {
      "code": "search",
      "explain": "百度搜索",
      "icon": "baidu-search.png",
      "cmds": [
        {
          "type": "over",
          "label": "百度搜索",
          "minLength": 1
        }
      ]
    },
    {
      "code": "bing-search",
      "explain": "必应搜索",
      "icon": "bing.png",
      "cmds": [
        {
          "type": "over",
          "label": "必应搜索",
          "minLength": 1
        }
      ]
    },
    {
      "code": "open-url",
      "explain": "打开网址",
      "icon": "openurl.png",
      "cmds": [
        {
          "type": "regex",
          "match": "/^https?:\\/\\/[^\\s/$.?#]\\S+$|^[a-z0-9][-a-z0-9]{0,62}(\\.[a-z0-9][-a-z0-9]{0,62}){1,10}(:[0-9]{1,5})?$/im",
          "label": "打开网址",
          "minLength": 3
        }
      ]
    },
    {
      "code": "window-info",
      "explain": "窗口信息",
      "icon": "window-info.png",
      "cmds": ["窗口信息", "Window Info"]
    },
    {
      "code": "copy-path",
      "explain": "复制路径",
      "icon": "folder.png",
      "cmds": [
        {
          "type": "window",
          "label": "复制路径",
          "match": {
            "app": ["Finder.app"]
          }
        }
      ]
    },
    {
      "code": "open-terminal",
      "explain": "在终端打开",
      "icon": "terminal.png",
      "cmds": [
        {
          "type": "window",
          "label": "在终端打开",
          "match": {
            "app": ["Finder.app"]
          }
        }
      ]
    }
  ]
}
